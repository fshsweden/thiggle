<h1>Listing postings</h1>

<table>
  <tr>
    <th>Post</th>
    <th>User</th>
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th>Location</th>
    <th>Price</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @postings.each do |posting| %>
  <tr>
    <td><%= posting.id %></td>
    <td><%= posting.user_id %></td>
    <td><%= posting.title %></td>
    <td><%= posting.category %></td>
    <td><%= posting.description %></td>
    <td><%= posting.location %></td>
    <td><%= posting.price %></td>
    <td><%= posting.date %></td>
    <td><%= link_to 'Show', posting %></td>
    <td><%= link_to 'Edit', edit_posting_path(posting) %></td>
    <td><%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

