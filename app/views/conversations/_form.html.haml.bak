= bootstrap_form_for :conversation, url: :conversations, html: { class: 'form-horizontal' } do |f|

  = f.input :recipients

  = f.input :subject

  = f.input :body

  .form-actions
    = f.button :submit, class: 'button-small purple_light rounded3'
    = submit_tag 'Cancel', type: :reset, class: 'button-small red_light rounded3'
