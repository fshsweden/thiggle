
<div class="container">
	
	
	<%= current_user.username %>
	Created on: <%= current_user.created_at%>
	
	
	<table class="table">
		<h3>Dashboard <%= @number_unread_messages%></h3>
    <tr>
      <th>From</th>
      <th>Subject</th>
  </tr>
	<% @conversations.each do |c| %>
	<% if c.is_unread?(current_user) %>
  <tr class = "warning">
    <td><%= c.last_sender.username %></td>
	<td><b><%= link_to c.subject, c%></b></td>
  </tr>
  	<% end %>
	<% if c.is_read?(current_user) %>  <tr>
    <td><%= c.last_sender.username %></td>
	<td><%= link_to c.subject, c%></td>
  </tr>
  <% end %>
<% end %>
</table>
<%= paginate @conversations %>
<%= link_to "New Message", new_conversation_path%>
<br />
</div>


<textarea></textarea>
<p>
    <p id="count">
</p>

<script>
maxCharacters = 160;

$('#count').text(maxCharacters);

$('textarea').bind('keyup keydown', function() {
    var count = $('#count');
    var characters = $(this).val().length;

    if (characters > maxCharacters) {
        count.addClass('over');
    } else {
        count.removeClass('over');
    }

    count.text(maxCharacters - characters);
});

</script>