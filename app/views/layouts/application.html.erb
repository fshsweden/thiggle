<!DOCTYPE html>
<html>
<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Grand+Hotel' rel='stylesheet' type='text/css'>
<head>
	<title>thiggle!</title>  
	<%= stylesheet_link_tag    "application", :media => "all" %>  
	<%= javascript_include_tag "application" %> 
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  
	<%= csrf_meta_tags %> 
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	ga('create', 'UA-42185689-1', 'thiggle.com');
	ga('send', 'pageview');

	$('#login').on('shown', function () {
		$('#user_login').focus();
	})

	</script>
</head>  
<body>
	<div class="navbar navbar-static-top">  
		<div class="navbar-inner">  
			<div class="container">  
				<%= link_to "Thiggle", root_path, :class => "brand logo-font"%>
				<ul class="nav nav-pills pull-left" style="margin-top:10px">
					<li><%= link_to "Explore", posts_path %></li>
					<li><%= link_to "New Post", new_post_path%></li>
				</ul>
				<ul class="nav nav-pills pull-right" style="margin-top:10px">
					<% if user_signed_in? %>
					<li class="top-nav-pills"><%= link_to @display_username, mailbox_dashboard_index_path, :class => 'pull-right' %></li>
			   		
					<% if @messages_unread > 0 %>
					<li><span class="badge badge-important"><%= link_to @messages_unread_text, mailbox_dashboard_index_path, class: 'mailbox-link'%></span></li>
					<% end %>
			    
					<li><%= link_to "Sign Out", destroy_user_session_path %></li>
					
					<% else %>
					<li><%= link_to "Register", new_user_registration_path, :class => 'pull-right' %> </li>    
					
					
					<!-- Button to trigger modal -->
					<li><a href="#login" role="button" onclick= "javascript:document.getElementById('input#user_login').focus()" class="button-small purple_light rounded3 pull-right" data-toggle="modal">Sign in</a></li>
 
					<!-- Modal -->
					<div id="login" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
							<h3 id="myModalLabel">Sign in</h3>
						</div>
						<div class="modal-body">
							<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
							<div style = "text-align:center"><%= f.label :login %>
								<%= f.text_field :login, :autofocus => true, :style => "margin-left: 22px" %></div>

								<div style = "text-align:center"><%= f.label :password %>
									<%= f.password_field :password %></div>

									<% if devise_mapping.rememberable? -%>
									<div style = "text-align:right"><%= f.check_box :remember_me %><%=f.label :remember_me %></div>
									<% end -%>

  


								</div>
								<div class="modal-footer">
									<!-- <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button> -->
									<div class = "rows"><%= f.submit "SIGN IN", :class => 'button-small purple_normal rounded3' %><div> </div></div><% end %>
								</div>
							</div>
							<% end %>

							<li class = "nomargin"><form class = "inline-form">
								<div class="input-append row-fluid">
									<input type="text" class="span8 smaller" id ="q" name="q" placeholder="Search">
									<button type="submit" class="btn btn-info">Search</button>
								</div>
							</form>

				
			

						</li>
					</form>

				</ul>
	       

			</div>  
		
		</div>  
	</div> 




	<%= yield %>

</body>
</html>