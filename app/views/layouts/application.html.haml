!!!
%html
  %head
    %title CL+
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags  

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container

          / site logo
          %a.brand{:href => "/home"} spacebook

          .nav-collapse.collapse
            %ul.nav
              %li{:class => controller_name == 'posts' ? 'active' : ''}= link_to "Posts", posts_path
              %li
                %a{:href => "#"} Jobs
              %li
                %a{:href => "#"} Housing
            
            %ul.nav.pull-right
              / search bar?
              %li
                = form_tag posts_path, :method => :get, :class => 'navbar-form pull-left' do
                  = text_field_tag :q, params[:q]
                  = submit_tag "Search", :name => nil

              / user
              - if user_signed_in?
                %li = link_to current_user.email, edit_user_registration_path
                %li= link_to "Sign Out", destroy_user_session_path
                - if current_user.admin?
                  %li= link_to "Admin Dashboard", posts_path
              - else
                %li= link_to "Sign In", new_user_session_path
                %li= link_to "Register", new_user_registration_path

    .container
      = yield


