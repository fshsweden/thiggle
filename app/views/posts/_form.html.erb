
<%= form_for(@post)  do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation" class = "alert alert-error">
      <!-- <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2> -->

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "row-fluid">
  <span class="field span4">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </span>
  <span class="field span4">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </span>
  
  <span class="field span4">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </span>
</div>
<div class = "row-fluid">
  <span class="field span12">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </span>
</div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>