<h1>Listing posts</h1>

<table>
  <tr>
    <th>Post</th>
    <th>User</th>
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th>Location</th>
    <th>Price</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.user_id %></td>
    <td><%= post.title %></td>
    <td><%= post.category %></td>
    <td><%= post.description %></td>
    <td><%= post.location %></td>
    <td><%= post.price %></td>
    <td><%= post.created_at %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

