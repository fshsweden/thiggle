<script type="text/javascript">//<![CDATA[ 



jQuery(function($){


    // Cycle plugin
    $('.slides').cycle({
        fx:     'none',
        speed:   500,
        timeout: 700,
        delay:  -4000,
        height:  'auto',
        fit: 1
    }).cycle("pause");
    
    

    // Pause & play on hover
    $('.slideshow-block').hover(function(){
        $(this).find('.slides').addClass('active').cycle('resume');
    }, function(){
        $(this).find('.slides').removeClass('active').cycle('pause');
    });

});

</script>



<div class="">
	<div class="row-fluid">
		<div>
			<div class="well sidebar-nav span2">
				<ul class="nav nav-list">
					<%= render 'side_search' %>

			</ul>
		
		</div><!--/.well -->
	</div><!--/span-->
	<div class = "span10">
		<% if flash[:notice] %>
		    <div class="notice"><%= flash[:notice] %></div>
		  <% end %>

		<div >
			<% if params.has_key?(:q) %>
			<b><%= @posts.count%></b> results for <%= params[:q] %>
		</div> 
		<%# @post = @search.results%>
		<% end %>
		
		<table class = "post">

			<% @posts.each do |post| %>

			<tr class = "well well-small marginbottom listing" id = <%= post.id %> >
				
					<td> 
                        
                        <div class = 'thumbnail post' style= 'width: 160px'>
						<div class = "slideshow-block" style="background: url(<%= post.photo.url(:thumb) %>) no-repeat">
						
							<div class = "slides" >
           						 	<%= image_tag post.photo.url(:thumb) %>
           						  	<% if post.photo2.present? %> 
              							<%= image_tag post.photo2.url(:thumb) %>
            						<% end %>
            						<% if post.photo3.present? %> 
            							<%= image_tag post.photo3.url(:thumb) %>
           					 		<% end %>
           				  		      <% if post.photo4.present? %> 
           			   			   		<%= image_tag post.photo4.url(:thumb) %>
           		   					<% end %>
        	  					</div>
  		    				</div>
                        



					</td>
					<td class= 'listing-title' style="word-wrap: break-word"><div class= "post" style="width:400px"><%= link_to post.title, post , :class => "post-title"%></br><div style= "color:grey" ><%= post.street %></div><hr></div>
			
						<%= post.description %><p> <%= raw post.tag_list.map { |t| link_to "##{t}", tag_path(t) }.join(' ') %></p>

						
                        <% if user_signed_in? %>
						
						<div id = "reply">
							<div class="container">
							<div class="class1">
							<!-- <a href="#" class="my-link">Reply</a> -->
							</div>
							<div class="class2" style = "display:none">
								<%= form_for :comment, :controller => "comments_controller", :url => url_for(:controller => 'comments', :action => 'create') do |f| %>
								<%= f.text_field :text %>
								<%= f.hidden_field :post_id, :value => post.id %>
								<%end %>

								<% post.comments.each do |comment| %>
								<b><%= comment.user_name %></b> wrote 
								<p><%= comment.text %></p>
								<hr>

								<%end %>
							
							</div>
							</div>
							
						<%end%>
							
						
						

						<td class = "price"><b>$<%= post.price %></b></td></td>
				
					

				</tr>
                </div>
    			
				<% end %>
				
			</table>
		

		</div>
	</div>






	<%= paginate @posts %>

	<%= link_to 'New Post', new_post_path %>
</div>

