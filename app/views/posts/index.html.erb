
		<h1>Listing posts</h1>

		<div class = "container">
			<% if params.has_key?(:q) %>
			<b><%= @posts.count%></b> results for <%= params[:q] %>
		</div> 
	<%# @post = @search.results%>
		<% end %>
		<table>


			<% @posts.each do |post| %>

  			<tr class = "well well-small offset1 span8 marginbottom listing">
	  			<ul class = "thumbnails">
    			<td> <li class = "nomargin"><div class = 'thumbnail'><%= image_tag post.photo.url(:thumbnail) %></div></li></td>
    			<td class= 'listing-title'><%= link_to post.title, post %></td>
				</ul>
    			<td class = "price"><b>$<%= post.price %></b></td>
				<% end %>

			</table>
		

	</div>
</div>



<%= paginate @posts %>

<%= link_to 'New Post', new_post_path %>

